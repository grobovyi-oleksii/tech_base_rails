<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @route.name %>
</p>
<div>
  <table>
    <thead>
    <tr>
      <td>Station</td>
      <td>Position</td>
      <td>Arrived time</td>
      <td>Departure time</td>
    </tr>
    </thead>
    <tbody>
    <% @route.railway_stations.ordered.each do |station| %>
      <tr>
        <td><%= station.title %></td>
        <td>
          <%= form_tag update_position_admin_railway_station_path(station.id), method: :post do %>
            <%= hidden_field_tag :route_id, @route.id %>
            <%= number_field_tag :station_index, station.index(@route.id) %>
            <%= submit_tag 'Save' %>
          <% end %>
        </td>
        <td>
          <%= form_tag update_datetime_admin_railway_station_path(station.id), method: :post do %>
            <%= hidden_field_tag :route_id, @route.id %>
            <%= time_field_tag :arrival_time, station.arrival_time(@route.id) %>
          <td><%= time_field_tag :departure_time, station.departure_time(@route.id) %></td>
          <td><%= submit_tag 'Save' %></td>
        <% end %>
        </td>

      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div>
  <% if @route.trains %>
    <strong>Trains: </strong>
    <ul>
      <% @route.trains.each do |train| %>
        <li><%= train.number %></li>
      <% end %>
    </ul>
  <% else %>
    <strong>there are no trains on the route</strong>
  <% end %>
</div>
<%= link_to 'Edit', edit_admin_route_path(@route) %> |
<%= link_to 'Back', admin_routes_path %>