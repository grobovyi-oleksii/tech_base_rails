<p id="notice"><%= notice %></p>

<h1>Trains</h1>

<table class="table">
  <thead>
  <tr>
    <th>Number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @trains.each do |train| %>
    <tr>
      <td>
        <div id="train_number_<%= train.id %>">
          <%= train.number %>
        </div>
        <%= render 'form', train: train, hidden: true %>
      </td>
      <td><%= link_to 'Show', [:admin, train] %></td>
      <td><%= link_to 'Edit', '', class: 'edit_train', data: { train_id: train.id } %></td>
      <td><%= link_to 'Destroy', [:admin, train], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Train', new_admin_train_path %>
